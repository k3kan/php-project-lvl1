#!/usr/bin/env php
<?php

namespace Bin\Games;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use function cli\prompt;
use function cli\line;
use BrainGames\Src\Calc;
use BrainGames\Src\Even;
use BrainGames\Src\Gcd;
use BrainGames\Src\Prime;
use BrainGames\Src\Progression;

function random()
{
    return rand(2,100);
}

line('Welcome to the Brain Game!');
$name = prompt('May I have your name?');
line("Hello, %s!", $name);
line('What the game you have will play?');
line("select from the list:");
line('1. Brain-calc');
line('2. Brain-even');
line('3. Brain-gcd');
line('4. Brain-prime');
line('5. Brain-progression');
$selected_games = prompt('Select the number of the list');

if ((int) $selected_games === 1) {
    Calc\Calc();
}
elseif ((int) $selected_games === 2) {
    Even\PatiryCheck();
}
elseif ((int) $selected_games === 3) {
    Gcd\gcd();
}
elseif ((int) $selected_games === 4) {
    Prime\prime();
}
elseif ((int) $selected_games === 5) {
    Progression\progression();
}


